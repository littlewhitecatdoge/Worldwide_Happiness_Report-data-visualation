{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "name": "globaldata",
      "url": "https://raw.githubusercontent.com/littlewhitecatdoge/Worldwide_Happiness_Report-data-visualation/littlewhitecatdoge/data/Wordwide_Happiness_Report_clean_data.csv",
      "format": {"type": "csv"}
    },
    "title": {
      "text": "Worldwide Happiness Report",
      "anchor": "middle",
      "fontSize": 30,
      "offset": 20
    },
    "hconcat": [
      {
        "vconcat": [
          {
            "width": 400,
            "height": 300,
            "mark": {
              "type": "bar",
              "stroke": "black",
              "cursor": "pointer",
              "tooltip": true,
              "height": 20
            },
            "encoding": {
              "y": {"field": "States", "type": "nominal", "sort": "-x"},
              "x": {
                "field": "averageScore",
                "type": "quantitative",
                "bandPosition": 1,
                "scale": {"domain": [0, 7.6]}
              },
              "color": {
                "condition": {
                  "param": "pointaverage",
                  "field": "averageScore",
                  "type": "nominal",
                  "scale": {"range": ["#1f77b4"]},
                  "legend": null
                },
                "value": "grey"
              },
              "fillOpacity": {
                "condition": {"param": "select1", "value": 1},
                "value": 0.3
              },
              "strokeWidth": {
                "condition": [
                  {"param": "select1", "empty": false, "value": 2},
                  {"param": "highlight1", "empty": false, "value": 1}
                ],
                "value": 0
              },
              "tooltip": [{"field": "States"}, {"field": "averageScore"}]
            },
            "params": [
              {
                "name": "pointaverage",
                "select": {
                  "type": "point",
                  "encodings": ["y"],
                  "resolve": "global"
                }
              },
              {
                "name": "highlight1",
                "select": {"type": "point", "on": "mouseover"}
              },
              {"name": "select1", "select": "point"}
            ],
            "transform": [
              {"filter": {"param": "vyear"}},
              {
                "aggregate": [
                  {"op": "mean", "field": "Score", "as": "averageScore"}
                ],
                "groupby": ["States"]
              }
            ]
          },
          {
            "width": 400,
            "height": 320,
            "encoding": {
              "x": {
                "field": "Score",
                "bin": {"binned": false, "step": 0.5},
                "type": "quantitative",
                "scale": {"domain": [2, 8]},
                "title":"range of Score"
              },
              "y": {"aggregate": "count", "scale": {"domain": [0, 32]}},
              "color": {
                "condition": {
                  "param": "Vscore",
                  "field": "Score",
                  "scale": {"range": ["#1f77b4"]},
                  "legend": null
                },
                "value": "grey"
              },
              "tooltip": [{"field": "Country or region"}, {"field": "Score"}]
            },
            "layer": [
              {
                "params": [
                  {
                    "name": "Vscore",
                    "select": {"type": "interval", "encodings": ["x"]}
                  }
                ],
                "transform": [
                  {"filter": {"param": "vyear"}},
                  {"filter": {"param": "pointaverage"}},
                  {"filter": {"param": "Vscore"}}
                ],
                "mark": {"type": "bar", "tooltip": true}
              },
              {
                "transform": [
                  {"filter": {"param": "vyear"}},
                  {"filter": {"param": "pointaverage"}}
                ],
                "mark": {"type": "bar"}
              }
            ]
          }
        ]
      },
      {
        "vconcat": [
          {
            "width": 650,
            "height": 350,
            "layer": [
              {
                "data": {
                  "url": "https://raw.githubusercontent.com/littlewhitecatdoge/Worldwide_Happiness_Report-data-visualation/littlewhitecatdoge/data/worlmap-110.json",
                  "format": {"type": "topojson", "feature": "countries"}
                },
                "mark": {
                  "type": "geoshape",
                  "fill": "lightgray",
                  "stroke": "white",
                  "cursor": "pointer"
                },
                "projection": {"type": "equalEarth"}
              },
              {
                "mark": {"type": "geoshape", "stroke": "black", "tooltip": true},
                "params": [
                  {
                    "name": "vyear",
                    "value": [{"year": 2015}],
                    "select": {"type": "point", "fields": ["year"]},
                    "bind": {
                      "name": "Year",
                      "input": "range",
                      "min": 2015,
                      "max": 2019,
                      "step": 1
                    }
                  },
                  {
                    "name": "highlight2",
                    "select": {"type": "point", "on": "mouseover"}
                  },
                  {"name": "pointcountry", "select": {"type": "point"}}
                ],
                "projection": {"type": "equalEarth"},
                "encoding": {
                  "strokeWidth": {
                    "condition": [
                      {"param": "highlight2", "empty": false, "value": 1}
                    ],
                    "value": 0
                  },
                  "shape": {"field": "geo", "type": "geojson"},
                  "color": {
                    "field": "Score",
                    "type": "quantitative",
                    "legend": {
                      "orient": "left",
                      "titleFontSize": 13,
                      "labelFontSize": 11
                    },
                    "scale": {
                      "scheme": "magma",
                      "reverse": false,
                      "domain": [2.6, 7.8]
                    }
                  },
                  "tooltip": [
                    {"field": "Country or region"},
                    {"field": "Score"},
                    {"field": "Rank"}
                  ]
                },
                "transform": [
                  {"filter": {"param": "vyear"}},
                  {"filter": {"param": "pointaverage"}},
                  {"filter": {"param": "clicked"}},
                  {"filter": {"param": "pointcountry"}},
                  {"filter": {"field": "year", "range": [2015, 2019]}},
                  {"filter": {"param": "Vscore"}},
                  {
                    "lookup": "Country or region",
                    "from": {
                      "data": {
                        "url": "https://raw.githubusercontent.com/littlewhitecatdoge/Worldwide_Happiness_Report-data-visualation/littlewhitecatdoge/data/worlmap-110.json",
                        "format": {"type": "topojson", "feature": "countries"}
                      },
                      "key": "properties.name"
                    },
                    "as": "geo"
                  }
                ]
              }
            ]
          },
          {
            "height": 300,
            "width": 600,
            "transform": [
              {
                "lookup": "States",
                "from": {
                  "key": "id",
                  "fields": ["name"],
                  "data": {
                    "values": [
                      {"id": "EUROPE", "name": "EUROPE"},
                      {"id": "NORTH AMERICA", "name": "NORTH AMERICA"},
                      {"id": "SOUTH AMERICA", "name": "SOUTH AMERICA"},
                      {"id": "ASIA", "name": "ASIA"},
                      {"id": "AFRICA", "name": "AFRICA"},
                      {"id": "OCEANIA", "name": "OCEANIA"}
                    ]
                  }
                }
              }
            ],
            "encoding": {
              "y": {
                "field": "Health",
                "type": "quantitative",
                "axis": {"tickCount": 5, "title": "Health"},
                "scale": {"domain": [0, 1.2]}
              },
              "x": {
                "field": "GDP",
                "type": "quantitative",
                "axis": {"tickCount": 5, "title": "GDP"},
                "scale": {"domain": [0, 2]}
              },
              "size": {
                "field": "Score",
                "type": "quantitative",
                "scale": {"domain": [2.5, 7.8]},
                "legend": null
              },
              "tooltip": [
                {"field": "Country or region"},
                {"field": "States"},
                {"field": "Score"},
                {"field": "Rank"}
              ],
              "color": {
                "condition": {
                  "param": "clicked",
                  "field": "States",
                  "title": "Region",
                  "scale": {"scheme": "category10"},
                  "legend": {
                    "orient": "top-left",
                    "titleFontSize": 13,
                    "labelFontSize": 11
                  }
                },
                "value": "grey"
              }
            },
            "layer": [
              {
                "mark": "circle",
                "transform": [
                  {"filter": {"param": "vyear"}},
                  {"filter": {"param": "Vscore"}},
                  {"filter": {"param": "pointaverage"}},
                  {"filter": {"param": "pointcountry"}}
                ]
              },
              {
                "params": [
                  {
                    "name": "clicked",
                    "select": {"type": "point", "fields": ["Country or region"]}
                  }
                ],
                "transform": [
                  {"filter": {"param": "vyear"}},
                  {"filter": {"param": "Vscore"}},
                  {"filter": {"param": "clicked"}},
                  {"filter": {"param": "pointaverage"}},
                  {"filter": {"param": "pointcountry"}}
                ],
                "mark": "circle"
              }
            ]
          }
        ]
      }
    ],
    "config": {}
  }