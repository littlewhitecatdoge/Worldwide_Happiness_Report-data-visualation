{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "name": "globaldata",
    "url": "https://raw.githubusercontent.com/littlewhitecatdoge/Worldwide_Happiness_Report-data-visualation/littlewhitecatdoge/data/Wordwide_Happiness_Report_clean_data.csv",
    "format": {"type": "csv"}
  },
  "vconcat": [
    {
      "hconcat": [
        {
          "width": 800,
          "height": 700,
          "mark": {"type": "geoshape", "stroke": "black", "tooltip": true},
          "params": [
            {
              "name": "vyear",
              "value": [{"year": 2015}],
              "select": {"type": "point", "fields": ["year"]},
              "bind": {
                "name": "Year",
                "input": "range",
                "min": 2015,
                "max": 2019,
                "step": 1
              }
            }
          ],
          "transform": [
            {"filter": {"param": "vyear"}},
            {"filter": {"param": "point"}},
            {"filter": {"field": "year", "range": [2015, 2019]}},
            {
              "lookup": "Country or region",
              "from": {
                "data": {
                  "url": "https://cdn.jsdelivr.net/npm/world-atlas@2/countries-110m.json",
                  "format": {"type": "topojson", "feature": "countries"}
                },
                "key": "properties.name"
              },
              "as": "geo"
            }
          ],
          "encoding": {
            "shape": {"field": "geo", "type": "geojson"},
            "color": {
              "field": "Score",
              "type": "quantitative",
              "scale": {
                "scheme": "greens",
                "reverse": false,
                "domain": [2.6, 7.8]
              }
            }
          }
        },
        {
          "width": 50,
          "height": 400,
          "mark": "bar",
          "encoding": {
            "y": {"field": "Country or region", "sort": "-x", "title": null},
            "x": {
              "field": "Score",
              "scale": {"domain": [2.6, 7.8]},
              "type": "quantitative"
            },
            "color": {
              "condition": {
                "param": "point",
                "type": "nominal",
                "scale": {"range": ["#8101FA"]}
              },
              "value": "grey"
            }
          },
          "params": [
            {
              "name": "point",
              "select": {
                "type": "interval",
                "encodings": ["y"],
                "resolve": "global"
              }
            }
          ],
          "transform": [{"filter": {"param": "vyear"}}]
        },
        {
          "width": 450,
          "height": 400,
          "mark": "bar",
          "encoding": {
            "y": {
              "field": "Country or region",
              "sort": "-x",
              "title": null,
              "scale": {"domain": {"param": "point"}}
            },
            "x": {
              "field": "Score",
              "scale": {"domain": [2.6, 7.8]},
              "type": "quantitative"
            }
          },
          "params": [
            {
              "name": "point1",
              "select": {
                "type": "interval",
                "encodings": ["y"],
                "resolve": "global"
              }
            }
          ],
          "transform": [{"filter": {"param": "vyear"}}]
        }
      ]
    }
  ],
  "config": {}
}